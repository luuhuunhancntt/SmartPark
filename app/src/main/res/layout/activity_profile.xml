<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.tulau.smartpark.ListFragment">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:context="com.tulau.smartpark.ProfileActivity"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        >

        <TextView
            android:id="@+id/tvLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:text="Log Out"
            android:textColor="#87edec"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/avata_tu"
            app:civ_border_color="#e0eedd"
            app:civ_border_width="2dp"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_image"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="Tư Lầu"
            android:textColor="#da0101"
            android:textSize="30dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tvYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="18/05/1995"
            android:textColor="#e0eedd"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/tvMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvYear"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="tulau@mail.com"
            android:textColor="#e0eedd"

            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/tvEndDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMail"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="20/05/2017"
            android:textColor="#e0eedd"
            android:textSize="20dp"
            android:layout_marginRight="10dp"
            />

        <Button
            android:id="@+id/btnChangePass"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_edit"/>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>