<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.tulau.smartpark.LoginView">


    <RelativeLayout
        android:id="@+id/login"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:gravity="center"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/imgLogin"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_above="@+id/txtID"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/icon_smartpark"/>

        <TextView
            android:id="@+id/tvid"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtID"
            android:layout_alignBottom="@+id/txtID"
            android:gravity="center"
            android:text="ID: "
            android:textSize="20dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/txtID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:imeOptions="actionDone"
            android:lines="1"
            android:shadowColor="@color/textColor"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/tvpass"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtPass"
            android:layout_alignBottom="@+id/txtPass"
            android:gravity="center"
            android:text="Pass: "
            android:textSize="20dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/txtPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtID"
            android:layout_marginLeft="60dp"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:lines="1"
            android:shadowColor="@color/textColor"
            android:singleLine="true">

        </EditText>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtPass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_selector"
            android:text="Log in"/>

        <TextView
            android:id="@+id/tvResetPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnLogin"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="forgot your password"
            android:textSize="20dp"
            android:textStyle="bold"
            />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminateDrawable="@drawable/circular_progress_bar"
        android:visibility="gone">
    </ProgressBar>


</android.support.constraint.ConstraintLayout>
